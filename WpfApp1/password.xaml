<UserControl x:Class="WpfApp1.password"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
       mc:Ignorable="d"
      Height="320" Width="650" >

    <Grid Background="#FFE0E5EB">

        <PasswordBox Name="old" HorizontalAlignment="Center" VerticalAlignment="Top" Width="240" Height="40" Margin="0,72,0,0"/>
        <PasswordBox Name="new" HorizontalAlignment="Center" VerticalAlignment="Center" Width="240" Height="40"/>
        <PasswordBox Name="new3" HorizontalAlignment="Center" VerticalAlignment="Top" Width="240" Height="40" Margin="0,200,0,0"/>

        <Button Width="150" Content="SUBMIT" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2196F3" Click="Button_Click" Margin="250,244,250,26"/>
    </Grid>
</UserControl>
